{
  "name": "rl-web",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:wasm && next build",
    "build:wasm": "wasm-pack build -t web crate",
    "start": "next start",
    "lint": "next lint",
    "format": "npx prettier@latest --write 'src'",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "jest tests/unit"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "dependencies": {
    "comlink": "^4.3.1",
    "next": "13.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.3",
    "jest": "^29.3.1",
    "typescript": "4.8.4"
  }
}
