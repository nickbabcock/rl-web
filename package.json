{
  "name": "rl-web",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:wasm && next build",
    "build:wasm": "wasm-pack build -t web crate",
    "start": "next start",
    "lint": "next lint",
    "format": "npx prettier@latest --write 'src'",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "jest tests/unit"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "dependencies": {
    "comlink": "^4.3.1",
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.2",
    "@types/node": "18.7.19",
    "@types/react": "18.0.18",
    "eslint": "8.23.0",
    "eslint-config-next": "12.2.5",
    "jest": "^29.0.3",
    "typescript": "4.8.2"
  }
}
